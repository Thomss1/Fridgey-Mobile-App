<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Fridgey"
             x:Class="Fridgey.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#aeffde</Color>
            <Color x:Key="Secondary">#e4f1ff</Color>
            <Color x:Key="DarkBackground">#333333</Color>
            <Style TargetType="Shell">
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource DarkBackground}" />
                <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Secondary}" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Secondary}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource Primary}" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
