<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Fridgey.Views"
       x:Class="Fridgey.AppShell"
       Shell.TabBarBackgroundColor="{StaticResource DarkBackground}"
       Shell.TabBarTitleColor="{StaticResource Secondary}"
       Shell.TabBarUnselectedColor="{StaticResource Secondary}"
       Shell.TabBarForegroundColor="{StaticResource Primary}">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Icon="home.png" />

        <ShellContent
            Title="Favorites"
            ContentTemplate="{DataTemplate views:FavoritesPage}"
            Icon="favorites.png" />

        <ShellContent
            Title="Meal Planner"
            ContentTemplate="{DataTemplate views:MealPlannerPage}"
            Icon="mealplanner.png" />
    </TabBar>
</Shell>
